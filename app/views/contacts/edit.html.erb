h1>Update Product:</h1>
  <%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
    <div class="form-group">
      First Name: <input type="text" value="<%= @contact.first_name %>" name="first_name" class="form-control">
    </div>
    <div class="form-group">
      Middle Name: <input type="text" value="<%= @contact.middle_name %>" name="middle_name" class="form-control">
    </div>
    <div class="form-group">
      Last Name: <input type="text" value="<%= @contact.last_name %>" name="last_name" class="form-control">
    </div>
    <div class="form-group">
      Email: <input type="text" value="<%= @contact.email %>" name="email" class="form-control">
    </div>
    <div class="form-group">
      Phone Number: <input type="text" value="<%= @contact.phone_number %>" name="phone_number" class="form-control">
    </div>
    <input class="btn btn-default" class="form-control" type="submit" value="Update Contact">
  <% end %>
<p></p>
<a class="btn btn-default" href="/">Cancel</a>